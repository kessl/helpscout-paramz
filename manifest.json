{
  "manifest_version": 3,
  "name": "UTM Paster",
  "version": "1.0",
  "description": "Automatically adds UTM parameters to pasted links on HelpScout",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["*://secure.helpscout.net/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}